<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <img src="~/image/logo/logonoithat.png" alt="Logo" height="40">
                </a>
                <a class="navbar-brand" asp-controller="Admin" asp-action="Index">Admin Dashboard</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                       
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Account" asp-action="Logout">
                                <i class="bi bi-box-arrow-right"></i> Đăng xuất
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Index"><i class="bi bi-box-seam"></i> Bảng điều khiển</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Products" asp-action="Manage"><i class="bi bi-box-seam"></i> Quản lý sản phẩm</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Orders" asp-action="ManageOrders"><i class="bi bi-cart-check"></i> Quản lý đơn hàng</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Manage"><i class="bi bi-people"></i> Quản lý tài khoản</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="ManageEmployees"><i class="bi bi-person-badge"></i> Quản lý nhân sự</a></li>                    
                        <li class="nav-item"><a class="nav-link" asp-controller="Reviews" asp-action="Index_Manage_Review"><i class="bi bi-star"></i> Đánh giá người dùng</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Reports" asp-action="Index"><i class="bi bi-bar-chart"></i> Quản lý doanh thu</a></li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="bg-dark text-white text-center py-3">
        <p>&copy; 2025 Admin Panel</p>
    </footer>
    @RenderSection("Scripts", required: false)

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
   
</body>
</html>
